{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "typeRoots": ["./types", "./node_modules/@types"],
    "strict": false,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "next-env.d.ts", "**/*.ts", "**/*.tsx", "types", "src/app/components/swiper.jsx", "src/app/components/horizontalscroll.jsx", "src/app/components/swiper/centered-swiper.jsx", "src/lib/animations/text-opacity.jsx", "src/lib/animations/parallax.jsx"],
  "exclude": ["node_modules"]
}
